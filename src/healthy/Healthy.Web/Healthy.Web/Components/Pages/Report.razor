@page "/Report"

<MudContainer MaxWidth="MaxWidth.Small">
    <MudText Typo="Typo.h5" Align="Align.Center">You're everything ❤️</MudText>
    <MudTextField Label="How do you feel?" @bind-Value="InputText"></MudTextField>
    <MudField Label="Rate your feeling" Variant="Variant.Outlined" InnerPadding="false">
        <MudRadioGroup @bind-Value="Choice">
            <MudRadio Value="@(Mood.VeryBad)" Color="Color.Primary">Very bad</MudRadio>
            <MudRadio Value="@(Mood.Bad)" Color="Color.Primary">Bad</MudRadio>
            <MudRadio Value="@(Mood.Good)" Color="Color.Primary">Good</MudRadio>
            <MudRadio Value="@(Mood.VeryGood)" Color="Color.Primary">Very good</MudRadio>
        </MudRadioGroup>
    </MudField>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Send"></MudButton>
</MudContainer>

@code {

    private string InputText { get; set; } = string.Empty;
    private Mood Choice { get; set; } = Mood.Good;
    
    private async Task Send()
    {
        // Sent
        return;
    }

    private enum Mood
    {
        VeryBad,
        Bad,
        Good,
        VeryGood
    }

}